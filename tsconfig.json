{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "src",
        "paths": {
            "@shared/*": ["app/shared/*"],
            "@redux/*": ["app/redux/*"],
            "@providers/*": ["providers/*"],
            "@pipes/*": ["pipes/*"],
            "@directives/*": ["directives/*"],
            "@utils/*": ["utils/*"],
            "@modules/*": ["app/modules/*"],
            "@includes/*": ["app/includes/*"],
            "@validators/*": ["validators/*"],
            "*": ["typings/*", "includes/*"]
        },
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "removeComments": true,
        "preserveSymlinks": true,
        "module": "es6",
        "target": "es5",
        "importHelpers": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2018", "dom"]
    },
    "include": ["main.ts", "src/**/*.ts"],
    "exclude": ["node_modules"],
    "types": ["lodash", "node", "chrome", "electron"]
}
